<div class="container">
  <section id="contents"  class="mx-auto" style="width: 700px;"> 
    <div class="container">
      <h2 class="pt-5">編集ページ</h2>
      <%= form_with model: @document, local: true do |f| %>
        <div class="form-group">
          <label>【タイトル】</label>
          <%= f.text_area :title, class: "title-form" %>
        </div>
        
        <div class="form-group">
          <label>【原稿文章】</label>
          <%= f.text_area :content, class: "content-form" %>
        </div>
        <div> <%= f.submit "編集完了", class: "btn btn-primary form-control" %> </div>
      <% end %>
    </div>
    
  </section>
</div>