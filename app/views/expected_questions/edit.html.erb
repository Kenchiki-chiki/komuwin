<div class="container">
  <section class="text-contents"  class="mx-auto"> 
    <div class="container">
      <h2 class="pt-5">編集ページ</h2>
      <%= form_with model: @expected_question, local: true do |f| %>
        <div class="form-group">
          <label>【質問内容】</label>
          <%= f.text_area :title, class: "title-form", required: true %>
        </div>
        
        <div class="form-group">
          <label>【回答内容】</label>
          <%= f.text_area :content, class: "content-form", required: true %>
        </div>
        <div> <%= f.submit "編集完了", class: "btn btn-primary form-control" %> </div>
      <% end %>
    </div>
    
  </section>
</div>